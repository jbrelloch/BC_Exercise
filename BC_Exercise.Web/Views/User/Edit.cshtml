<div ng-controller="EditUserController">
    <div class="page-header">
        <h1>
            User Info
            <div class="btn-group pull-right" role="group" ng-if="!isEditingUser">
                <button class="btn btn-default" ng-click="beginEdit()">Edit</button>
                <button class="btn btn-danger" data-toggle="modal" data-target="#myModal">Delete</button>
            </div>
        </h1>
    </div>
    <div class="form-group">
        <label for="fname">First Name:</label><p class="text-danger" ng-if="errors.FirstName">{{errors.FirstName}}</p>
        <input type="text" class="form-control" id="fname" placeholder="Enter first name" ng-model="user.FirstName" ng-disabled="!isEditingUser">
    </div>
    <div class="form-group">
        <label for="lname">Last Name:</label><p class="text-danger" ng-if="errors.LastName">{{errors.LastName}}</p>
        <input type="text" class="form-control" id="lname" placeholder="Enter last name" ng-model="user.LastName" ng-disabled="!isEditingUser">
    </div>
    <div class="form-group">
        <label for="email">Email:</label><p class="text-danger" ng-if="errors.Email">{{errors.Email}}</p>
        <input type="email" class="form-control" id="email" placeholder="Enter email" ng-model="user.Email" ng-disabled="!isEditingUser">
    </div>
    <div class="form-group">
        <label for="street">Street:</label><p class="text-danger" ng-if="errors.StreetAddress">{{errors.StreetAddress}}</p>
        <input type="text" class="form-control" id="street" placeholder="Enter street address" ng-model="user.StreetAddress" ng-disabled="!isEditingUser">
    </div>
    <div class="form-group">
        <label for="city">City:</label><p class="text-danger" ng-if="errors.City">{{errors.City}}</p>
        <input type="text" class="form-control" id="city" placeholder="Enter city" ng-model="user.City" ng-disabled="!isEditingUser">
    </div>
    <div class="form-group">
        <label for="state">State:</label><p class="text-danger" ng-if="errors.State">{{errors.State}}</p>
        <input type="text" class="form-control" id="state" placeholder="Enter state" ng-model="user.State" ng-disabled="!isEditingUser">
    </div>
    <div class="form-group">
        <label for="zip">Zip:</label><p class="text-danger" ng-if="errors.Zip">{{errors.Zip}}</p>
        <input type="text" class="form-control" id="zip" placeholder="Enter zip code" ng-model="user.Zip" ng-disabled="!isEditingUser">
    </div>
    <div class="btn-group" role="group" ng-if="isEditingUser">
        <button class="btn btn-default" ng-click="saveUserEdits()">Save</button>
        <button class="btn btn-danger" ng-click="cancelUserEdits()">Cancel</button>
    </div>

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Please Confirm</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete {{user.FullName}}.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="deleteUser()">Confirm</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>