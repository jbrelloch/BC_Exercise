<div ng-controller="AddUserController">
    <h1>Add User</h1>
    <div class="form-group">
        <label for="fname">First Name:</label><p class="text-danger" ng-if="errors.FirstName">{{errors.FirstName}}</p>
        <input type="text" class="form-control" id="fname" placeholder="Enter first name" ng-model="user.FirstName">
    </div>
    <div class="form-group">
        <label for="lname">Last Name:</label><p class="text-danger" ng-if="errors.LastName">{{errors.LastName}}</p>
        <input type="text" class="form-control" id="lname" placeholder="Enter last name" ng-model="user.LastName">
    </div>
    <div class="form-group">
        <label for="email">Email:</label><p class="text-danger" ng-if="errors.Email">{{errors.Email}}</p>
        <input type="email" class="form-control" id="email" placeholder="Enter email" ng-model="user.Email">
    </div>
    <div class="form-group">
        <label for="street">Street:</label><p class="text-danger" ng-if="errors.StreetAddress">{{errors.StreetAddress}}</p>
        <input type="text" class="form-control" id="street" placeholder="Enter street address" ng-model="user.StreetAddress">
    </div>
    <div class="form-group">
        <label for="city">City:</label><p class="text-danger" ng-if="errors.City">{{errors.City}}</p>
        <input type="text" class="form-control" id="city" placeholder="Enter city" ng-model="user.City">
    </div>
    <div class="form-group">
        <label for="state">State:</label><p class="text-danger" ng-if="errors.State">{{errors.State}}</p>
        <input type="text" class="form-control" id="state" placeholder="Enter state" ng-model="user.State">
    </div>
    <div class="form-group">
        <label for="zip">Zip:</label><p class="text-danger" ng-if="errors.Zip">{{errors.Zip}}</p>
        <input type="text" class="form-control" id="zip" placeholder="Enter zip code" ng-model="user.Zip">
    </div>
    <button class="btn btn-default" ng-click="addUser()">Submit</button>
    <a class="btn btn-danger" href="/#/user">Cancel</a>
</div>