<div ng-controller="UserController">
    <div class="page-header">
        <h1>
            Users
            <a class="btn btn-info pull-right" href="/#/user/add">Add</a>
        </h1>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Coordinates</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="user in users" ng-click="editUser(user.Id)">
            <td>{{$index + 1}}</td>
            <td>{{user.FirstName}}</td>
            <td>{{user.LastName}}</td>
            <td>{{user.Email}}</td>
            <td>{{fullAddress($index)}}</td>
            <td>{{user.Coordinates}}</td>
        </tr>
        </tbody>
    </table>
</div>